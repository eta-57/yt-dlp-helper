{
  "manifest_version": 2,
  "name": "ytdl-helper",
  "description": "Downloads media from current URL",
  "version": "0.0.1",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Alt+Y"
      }
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ytdlhelper@google.gov",
      "strict_min_version": "2.0"
    }
  },
  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Download URL"
  },
  "icons": {
    "48": "icons/border-48.png"
  },
  "background": {
    "scripts": ["index.js"]
  },
  "permissions": ["activeTab", "tabs"]
  
}
